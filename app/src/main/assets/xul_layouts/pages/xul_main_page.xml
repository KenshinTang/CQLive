<?xml version="1.1" encoding="utf-8"?>
<starcor.xul screen="1920x1080" xmlns="http://www.starcor.cn/XUL">
    <script src="file:///.assets/plugin/player/player/media_player.js" type="script/javascript"/>
    <page id="MainPage">
        <action event="appEvents:toggleUi" type="script/javascript">MediaPlayer_toggleUI</action>
        <action event="load" type="usr_cmd"/>
        <layout>
            <area id="title-frame" desc="顶部标题栏">
                <style name="display">none</style>
                <attr name="y">0</attr>
                <attr name="width">match_parent</attr>
                <attr name="height">180</attr>
                <area>
                    <style name="z-index">99</style>
                    <attr name="width">1920</attr>
                    <attr name="height">209</attr>
                    <style name="background-image">file:///.assets/images/img_top_bg.png</style>
                    <attr name="width">match_parent</attr>
                    <item type="label" id="live_num">
                        <style name="font-color">ffffffff</style>
                        <style name="font-size">60</style>
                        <attr name="x">93</attr>
                        <attr name="y">42</attr>
                    </item>
                    <item type="label" id="live_name">
                        <attr name="width">800</attr>
                        <attr name="marquee">500,1000,6000,40%</attr>
                        <style name="font-color">fff0f0f0</style>
                        <style name="font-size">60</style>
                        <attr name="x">283</attr>
                        <attr name="y">48</attr>
                    </item>
                    <item type="label" id="timeshift_logo">
                        <attr name="x">1710</attr>
                        <attr name="y">54</attr>
                        <attr name="width">120</attr>
                        <attr name="height">60</attr>
                        <style name="border">0,b7ffffff,8,8</style>
                        <style name="background-color">b7ffffff</style>
                        <style name="font-color">ff000000</style>
                        <style name="font-size">36</style>
                        <style name="font-align">0.5,0.5</style>
                        <style name="display">none</style>
                        <attr name="text">时移</attr>
                    </item>
                </area>
            </area>

            <area id="category-list" desc="频道栏">
<!--                <style name="display">none</style>-->
<!--                <attr name="x">0</attr>-->
                <attr name="x">-1060</attr>
                <attr name="y">0</attr>
                <attr name="width">1060</attr>
                <attr name="height">match_parent</attr>
                <area desc="频道分类" type="radio">
                    <style name="background-color">f2434343</style>
                    <attr name="checked-class">category_checked</attr>
                    <focus mode="dynamic"/>
                    <attr name="x">0</attr>
                    <attr name="y">0</attr>
                    <attr name="width">420</attr>
                    <attr name="height">match_parent</attr>
                    <area type="slider">
                        <attr name="direction">vertical</attr>
                        <attr name="x">0</attr>
                        <attr name="y">190</attr>
                        <attr name="width">match_parent</attr>
                        <attr name="height">840</attr>
    <!--                    <attr name="lock-focus">0.5</attr>-->
                        <style name="clip-children">true</style>
                        <area id="category" type="massive" class="playbill-list-massive">
                            <template id="@item-template">
                                <item filter="[0]" class="playbill-item, playbill-category-item" type="image">
                                    <focus mode="focusable" focused="true"/>
                                    <data name="category_id" binding="[=category_id]"/>
                                    <attr name="text" binding="[=category_name]"/>
                                    <attr name="img.0" binding="[=default_icon_img_url]"/>
                                    <action event="focus" type="script/javascript">
                                        if(!this.hasClass("category_checked")){
                                            this.fireEvent("click");
                                        }
                                    </action>
                                    <action event="checked" type="script/javascript">
                                        var category_id = this.getData("category_id");
                                        this.dispatchEvent("switchCategory", "usr_cmd", JSON.stringify({"category_id":category_id}));
                                    </action>
                                </item>
                                <item class="playbill-item, playbill-category-item" type="image">
                                    <focus mode="focusable" focused="true"/>
                                    <data name="category_id" binding="[=category_id]"/>
                                    <attr name="text" binding="[=category_name]"/>
                                    <attr name="img.0" binding="[=default_icon_img_url]"/>
                                    <action event="focus" type="script/javascript">
                                        if(!this.hasClass("category_checked")){
                                            this.fireEvent("click");
                                        }
                                    </action>
                                    <action event="checked" type="script/javascript">
                                        var category_id = this.getData("category_id");
                                        this.dispatchEvent("switchCategory", "usr_cmd", JSON.stringify({"category_id":category_id}));
                                    </action>
                                </item>
                            </template>
                        </area>
                    </area>
                </area>
                <item type="image" desc="分割线">
                    <attr name="width">1</attr>
                    <attr name="height">match_parent</attr>
                    <style name="background-color">19ffffff</style>
                    <focus mode="nofocus"/>
                </item>
                <area desc="频道列表" type="radio">
                    <style name="background-color">e5313131</style>
                    <attr name="checked-class">category_checked</attr>
                    <attr name="x">420</attr>
                    <attr name="y">0</attr>
                    <attr name="width">640</attr>
                    <attr name="height">match_parent</attr>
                    <area desc="顶部提示">
                        <focus mode="nofocus"/>
                        <attr name="height">190</attr>
                        <attr name="width">match_parent</attr>
                        <item id="txt_category_name" type="label">
                            <focus mode="nofocus"/>
                            <attr name="x">60</attr>
                            <attr name="y">90</attr>
                            <attr name="width">178</attr>
                            <attr name="marquee">500,1000,800,40%</attr>
                            <attr name="text">分类名称</attr>
                            <style name="font-size">42</style>
                            <style name="font-weight">1.1</style>
                            <style name="font-color">ddffffff</style>
                        </item>
                        <item id="txt_tips_1" type="label">
                            <focus mode="nofocus"/>
                            <attr name="height">match_parent</attr>
                            <attr name="x">248</attr>
                            <attr name="y">108</attr>
                            <attr name="text">遥控器</attr>
                            <style name="font-size">26</style>
                            <style name="font-color">ffbbbbbb</style>
                        </item>
                        <item id="txt_tips_2" type="label">
                            <focus mode="nofocus"/>
                            <attr name="height">match_parent</attr>
                            <attr name="x">326</attr>
                            <attr name="y">108</attr>
                            <attr name="text"> 菜单键 </attr>
                            <style name="font-size">26</style>
                            <style name="font-color">ffffffff</style>
                        </item>
                        <item id="txt_tips_3" type="label">
                            <focus mode="nofocus"/>
                            <attr name="x">415</attr>
                            <attr name="y">108</attr>
                            <attr name="height">match_parent</attr>
                            <attr name="text">收藏频道</attr>
                            <style name="font-size">26</style>
                            <style name="font-color">ffbbbbbb</style>
                        </item>
                    </area>
                    <area type="slider">
                        <focus mode="dynamic,nearby"/>
                        <attr name="direction">vertical</attr>
                        <attr name="x">0</attr>
                        <attr name="y">190</attr>
                        <attr name="width">match_parent</attr>
                        <attr name="height">840</attr>
                        <attr name="lock-focus">0.2008</attr>
                        <style name="clip-children">true</style>
                        <area id="channel" type="massive" class="playbill-list-massive">
                            <template id="@item-template">
                                <area class="playbill-item">
                                    <action event="focus" type="script/javascript">
                                        this.dispatchEvent("preloadPlayRes", "usr_cmd", "");
                                    </action>
                                    <attr name="width">match_parent</attr>
                                    <attr name="height">140</attr>
                                    <data name="live_id" binding="[=live_id]"/>
                                    <data name="category_id" binding="[=category_id]"/>
                                    <action event="checked" type="script/javascript">
                                        var live_id = this.getData("live_id");
                                        var category_id = this.getData("category_id");
                                        this.dispatchEvent("switchChannel", "usr_cmd", JSON.stringify({"live_id":live_id, "category_id":category_id}));
                                    </action>
                                    <item id="channel_id" type="label" desc="频道号">
                                        <attr name="x">60</attr>
                                        <attr name="height">match_parent</attr>
                                        <style name="font-align">0, 0.5</style>
                                        <style name="font-size">40</style>
                                        <style name="font-color">FFFFFFFF</style>
                                        <attr name="text" binding="[=live_number]"/>
                                    </item>
                                    <item type="image" desc="频道图标">
                                        <focus mode="nofocus"/>
                                        <attr name="x">160</attr>
                                        <attr name="y">45</attr>
                                        <attr name="img.0.width">60</attr>
                                        <attr name="img.0.height">60</attr>
                                        <attr name="img.0" binding="[=icon_img_url]"/>
                                    </item>
                                    <item id="channel_name" type="label" desc="频道名">
                                        <attr name="x">260</attr>
                                        <attr name="height">match_parent</attr>
                                        <style name="font-align">0, 0.5</style>
                                        <style name="font-size">40</style>
                                        <style name="font-color">FFFFFFFF</style>
                                        <attr name="text" binding="[=live_name]"/>
                                    </item>
<!--                                    <item type="image" desc="加锁图标">-->
<!--                                        <focus mode="nofocus"/>-->
<!--                                        <attr name="x">530</attr>-->
<!--                                        <attr name="y">56</attr>-->
<!--                                        <attr name="img.0.width">28</attr>-->
<!--                                        <attr name="img.0.height">32</attr>-->
<!--                                        <attr name="img.0">file:///.assets/images/icon_lock.png</attr>-->
<!--                                    </item>-->
                                    <item id="collectState" type="image" desc="收藏图标">
                                        <focus mode="nofocus"/>
                                        <attr name="x">555</attr>
                                        <attr name="y">56</attr>
                                        <attr name="img.0.width">32</attr>
                                        <attr name="img.0.height">32</attr>
                                        <attr name="img.0">file:///.assets/images/icon_star.png</attr>
                                        <attr name="img.0.visible">false</attr>
                                    </item>
                                </area>
                            </template>
                        </area>
                    </area>
                </area>
                <area id="area_none_channel">
                    <style name="display">none</style>
                    <focus mode="nofocus"/>
                    <item type="image">
                        <focus mode="nofocus"/>
                        <attr name="img.0">file:///.assets/images/img_no_channel.png</attr>
                        <attr name="x">605</attr>
                        <attr name="y">380</attr>
                    </item>
                    <item type="label">
                        <attr name="y">610</attr>
                        <attr name="x">620</attr>
                        <style name="font-color">ffffffff</style>
                        <style name="font-size">30</style>
                        <attr name="text">抱歉，暂无频道</attr>
                    </item>
                    <item type="label">
                        <attr name="x">485</attr>
                        <attr name="y">665</attr>
                        <style name="font-color">ffffffff</style>
                        <style name="font-size">30</style>
                        <attr name="text">此分类下暂无频道信息，请稍后再试</attr>
                    </item>
                </area>
            </area>

            <area id="control-frame" desc="信息条+进度条">
                <attr name="y">1080</attr>
                <attr name="width">match_parent</attr>
                <item id="player-state" type="image" desc="屏幕中间的快进快退标识">
                    <attr name="x">878</attr>
                    <attr name="y">458</attr>
                    <focus mode="nofocus" />
                    <attr name="width">164</attr>
                    <attr name="height">164</attr>
                    <attr name="img.1">file:///.assets/images/state_paused.png</attr>
                    <attr name="img.2">file:///.assets/images/state_forward.png</attr>
                    <attr name="img.3">file:///.assets/images/state_rewind.png</attr>
                    <attr name="img.1.visible">false</attr>
                    <attr name="img.2.visible">false</attr>
                    <attr name="img.3.visible">false</attr>
                </item>

                <area>
                    <attr name="width">match_parent</attr>
                    <attr name="height">365</attr>
                    <attr name="y">715</attr>
                    <style name="background-image">file:///.assets/images/img_bottom_bg.png</style>
                    <area>
                        <attr name="y">205</attr>
                        <style name="clip-children">false</style>
                        <style name="padding">0,92</style>
                        <attr name="width">match_parent</attr>
                        <item id="player-time-begin" type="label" class="player-time-label" desc="左边时间/可时移时间">
                        </item>
                        <item id="player-pos" class="player-pos" type="seek_bar">
                            <focus mode="nofocus"/>
                        </item>
                        <item id="player-time-end" type="label" class="player-time-label" desc="右边时间/当前时间/直播时间">
                            <attr name="x">1625</attr>
                        </item>
                    </area>
                </area>
            </area>

            <area id="operate-tip" desc="操作提示">
                <style name="display">block</style>
                <item id="img_operate_tips" type="image">
                    <style name="background-image">file:///.assets/images/img_tips_bg.png</style>
                    <attr name="y">684</attr>
                    <attr name="width">1920</attr>
                    <attr name="height">417</attr>
                    <focus mode="nofocus"/>
                    <attr name="img.0">file:///.assets/images/img_remote_control.png</attr>
                    <attr name="img.0.mode">center</attr>
                    <attr name="img.0.align">0</attr>
                    <attr name="img.0.width">402</attr>
                    <attr name="img.0.height">396</attr>
                    <attr name="img.0.padding">0,1004,0,0</attr>
                    <attr name="img.1">file:///.assets/images/img_live_tips.png</attr>
                    <attr name="img.1.mode">center</attr>
                    <attr name="img.1.align">0</attr>
                    <attr name="img.1.width">239</attr>
                    <attr name="img.1.height">268</attr>
                    <attr name="img.1.padding">66,1393,0,0</attr>
                </item>
            </area>
        </layout>
        <selector>
            <select class="category_checked">
                <style name="background-color">33ffffff</style>
            </select>
            <select class="playbill-list-massive">
                <attr name="direction">vertical</attr>
                <attr name="arrangement">linear-fixed</attr>
                <attr name="minimum-item">18</attr>
                <attr name="cache-pages">0.6</attr>
            </select>
            <select class="playbill-item">
                <focus mode="focusable" priority="1"/>
            </select>
            <select class="playbill-item" state="focused">
                <attr name="marquee">500,1000,800,40%</attr>
                <style name="background-color">ffffb400</style>
            </select>
            <select class="playbill-category-item">
                <!--<style name="border">2,ffff0000</style>-->
                <style name="font-size">36</style>
                <attr name="width">420</attr>
                <attr name="height">140</attr>
                <style name="font-align">0,0.5</style>
                <style name="font-color">FFFFFFFF</style>
                <style name="padding">0,187,33,0</style>
                <attr name="marquee">500,1000,3000,50%</attr>
                <attr name="img.0.mode">center</attr>
                <attr name="img.0.align">0,0.5</attr>
                <attr name="img.0.padding">0,90,0,0</attr>
                <attr name="img.0.width">60</attr>
                <attr name="img.0.height">60</attr>
            </select>

            <select class="player-state-fast-forward">
                <attr name="img.1.visible">false</attr>
                <attr name="img.2.visible">true</attr>
                <attr name="img.3.visible">false</attr>
            </select>
            <select class="player-state-rewind">
                <attr name="img.1.visible">false</attr>
                <attr name="img.2.visible">false</attr>
                <attr name="img.3.visible">true</attr>
            </select>

            <select class="player-time-label">
                <style name="font-color">fff0f0f0</style>
                <style name="font-size">30</style>
                <style name="font-align">0.5,0.5</style>
                <attr name="width">115</attr>
                <attr name="height">28</attr>
                <attr name="text">00:00:00</attr>
                <attr name="y">82</attr>
            </select>
            <select class="current_play_style">
                <style name="font-color">ffffffff</style>
                <style name="font-size">36</style>
                <attr name="y">100</attr>
            </select>
            <select class="program-name-label">
                <attr name="width">312</attr>
                <style name="font-weight">1.1</style>
            </select>
            <select class="next_play_style">
                <style name="font-color">b7ffffff</style>
                <style name="font-size">28</style>
                <attr name="y">158</attr>
            </select>

            <select class="player-pos">
                <style name="margin">0,45</style>
                <attr name="y">0</attr>
                <attr name="max-layers">5</attr>
                <attr name="width">1740</attr>
                <attr name="height">100</attr>
                <style name="padding">0,-10,-10,0</style>
                <attr name="img.0">@color:4cffffff,4,4</attr><!--背景-->
                <attr name="img.0.padding">60,0,0,30</attr>
                <attr name="img.3">@color:cfffffff,4,4</attr><!--实际进度-->
                <attr name="img.3.padding">60,0,0,30</attr>
                <attr name="img.4">@color:ff24b3f9,11,11</attr><!--圆点-->
                <attr name="img.4.mode">center</attr>
                <attr name="img.4.width">22</attr>
                <attr name="img.4.height">22</attr>
                <attr name="img.4.padding">0,-4</attr>
                <attr name="img.4.align">0,1</attr>
                <attr name="img.4.visible">false</attr>
                <style name="font-color">ff000000</style>
                <style name="font-size">30</style>
                <attr name="seek-mode">live</attr>
                <attr name="tip.y">0</attr>
            </select>
        </selector>
    </page>
</starcor.xul>
